@import "mocha.css";

* {
  padding: 0px;
  margin: 0;
  color: @text;
  font-family: JetBrainsMono Nerd Font;
  font-size: 18px;
}

window#waybar {
  background-color: rgba(0, 0, 0, 0);
  border-radius: 5px;
}

.modules-left,
.modules-center,
.modules-right{
  padding: 0px 10px;
  margin: 5px;
  border-radius: 5px;
  background-color: alpha(@mantle,0.5);
  
}

.modules-left {
  padding-left: 0px;
}

.modules-center {

}

.modules-right {
padding-right: 0px;
}


/* Left */
#workspaces button.active{
  border-bottom: 2px solid @text;
}

#workspaces button:nth-child(1) label {
  color: @sapphire;
  margin: 0px 8px;
}

#workspaces button:nth-child(2) label {
  color: @sky;
  margin: 0px 8px;
}

#workspaces button:nth-child(3) label {
  color: @teal;
  margin: 0px 8px;
}

#workspaces button:nth-child(4) label {
  color: @green;
  margin: 0px 8px;
}

#workspaces button:nth-child(5) label {
  color: @yellow;
  margin: 0px 8px;
}


/* Center */
#clock {
  color: @text;
}


/* Right */
#cpu,
#memory,
#temperature {
  padding: 5px;
  border-radius: 5px;
}

#cpu {
  color: @yellow;
}

#memory {
  color: @green;
}

#temperature {
  color: @blue;
}

#custom-window-name {
  color: @text;
}

#pulseaudio,
#backlight {
  margin-top: 5px;
  margin-bottom: 5px;
}

#pulseaudio {
  color: @sky;
  padding: 0px 10px 0px 0px;
  border-radius: 5px;
}

#network {
  color: @rosewater;
  margin-right: 10px;
}
